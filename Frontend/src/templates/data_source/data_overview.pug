#table-wrapper(style="width:100hv;border: solid 2px;padding: 20px;border-color:lightgray;border-radius:5px").col-md-12
    table#data_overview.table.table-hover
        thead
            tr
                th 
                    if permission > 0
                        a#permissionSelected.fa.fa-edit.permissionSelected(style='cursor:pointer')
                    a.fa.fa-download.dataDownloadProgress(style='cursor:pointer')
                    a.fa.fa-spinner.fa-spin(style='display:none;')
                    progress.progress(value='0' style='display:none;margin-right:5px;width:16px;font-size:5px;height:5px;margin-bottom:0px')
                th Name
                th Group
                th Action

if permission > 0
    #grantPermission.modal
        .modal-content(style='width:60%;left:20%;top:10%')
            .modal-header
                span.close &times;
                h2 Grant Access
            .modal-body
                .container(style='width:100%;margin-bottom: 15px;')
                    .form-group
                        .col-md-12
                            label(style='font-size: 20px;;margin-top: 15px;margin-bottom: 15px;') Data Name: 
                                span#data_name
                        .col-md-12
                            table#usersTable.table.table-hover
                                thead
                                    tr
                                        th User Name
                                        th Group

                            ul.legend(style='list-style: none; margin-top: 10px')
                                li(style='float: left; margin-right: 10px;')
                                    span(style='border: 1px solid #ccc; float: left; width: 17px; height: 17px; margin: 2px;background-color: white')
                                    | Non-permission
                                li(style='float: left; margin-right: 10px;')
                                    span(style='border: 1px solid #ccc; float: left; width: 17px; height: 17px; margin: 2px;background-color: #b0bed9')
                                    | Selection
            .modal-footer
                button.cancel.btn.btn-default Cancel
                button#update_permission.btn.btn-success Update